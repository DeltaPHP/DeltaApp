<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    {% if pageDescription %}
    <meta name="description" content="{{ pageDescription}}">
    {% endif %}
    <meta name="author" content="gisnote.org">
    <link rel="icon" href="favicon.ico">

    <title>{{ pageTitle | default('gisNote') }}</title>
    <base href="{{ baseHref|default("/") }}">
    {% if canonicalRef %}
        <link rel="canonical" href="{{ canonicalRef }}"/>
    {% endif %}

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="static/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="static/lib/bootstrap/dist/css/bootstrap-theme.css">
    <!--[if lt IE 9]>
    <script src="static/lib/html5shiv/dist/html5shiv.js"></script>
    <script src="static/lib/respond/dest/respond.min.js"></script>
    <![endif]-->
    <script type='text/javascript' src="static/lib/jquery/dist/jquery.min.js"></script>
    <script type='text/javascript' src="static/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type='text/javascript' src="static/js/confirm.js"></script>
</head>

<body>

<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">GisNote.org</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                {% block navigation %}
                    {% for item in siteMenu.admin.items %}
                        {% if item.isAllow %}
                            <li class="{{ item.active ? "active" }}">
                                <a href="{{ item.link }}">{{ item.text }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                {% endblock navigation %}
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container">

    {% block content %}
        <div class="row">
            <aside class="col-lg-3 col-md-3">
                {% block aside %}
                {% endblock aside %}
            </aside>
            <article class="col-lg-9 col-md-9">
                {% block article %}
                {% endblock article %}
            </article>
        </div>
    {% endblock content %}

</div><!-- /.container -->


</body>
</html>
