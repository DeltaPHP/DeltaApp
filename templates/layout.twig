<!DOCTYPE html>
<html lang="ru">
<head>
    <title>{{ pageTitle | default('Delta Skeleton Application')}}</title>
    <meta name="description" content="{{ pageDescription | default('Skeleton application on Delta php framework') }}" />
    <meta charset="utf-8">
    <base href="/">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="static/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="static/lib/bootstrap/css/bootstrap-responsive.min.css">
    <!--[if lt IE 9]>
    <script src="static/lib/js/html5shiv.js"></script>
    <![endif]-->
    <script type='text/javascript' src="static/lib/jquery/jquery-1.10.2.min.js"></script>
    <script type='text/javascript' src="static/lib/bootstrap/js/bootstrap.min.js"></script>
    {% block head %}

    {% endblock head %}
</head>
<body>

<header>
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="navbar">
                    <div class="navbar-inner">
                        <a class="brand" href="#">Delta Skeleton Application</a>
                        <ul class="nav">
                            <li class="{% if _controller == "index" %}active{% endif %}">
                                <a href="/">Home</a>
                            </li>
                            <li>
                                <a href="https://github.com/DeltaPHP/DeltaSkeletonApplication">Github</a>
                            </li>
                            <li>
                                <a href="https://github.com/DeltaPHP">Framework</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div id="content">
    {% block container %}
        <div class="container">
            <div class="row">
                <div class="span12">
                    {% block content %}

                    {% endblock content %}
                </div>
            </div>
        </div>
    {% endblock container %}
</div>

{% block counter %}

{% endblock counter %}

</body>
</html>