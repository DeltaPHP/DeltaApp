{% extends "layout.twig" %}

{% block head %}
    {{ parent() }}

    <link href="/static/css/delta.css" rel="stylesheet">

    {{ asset_js([
    "SyntaxHighlighter/scripts/XRegExp.js",
    "SyntaxHighlighter/scripts/shCore.js",
    "SyntaxHighlighter/scripts/shBrushPhp.js",
    "SyntaxHighlighter/scripts/shBrushBash.js",
    "SyntaxHighlighter/scripts/shBrushXml.js",
    "SyntaxHighlighter/scripts/shBrushPlain.js",
    ], default, true) }}

    {{ asset_css([
    "SyntaxHighlighter/styles/shCore.css",
    "SyntaxHighlighter/styles/shThemeDefault.css",
    "assets/css/delta-index.css",
    ], default, true) }}

{% endblock head %}

{% block content %}
    <div class="container-narrow">
        <div class="jumbotron">
            <h1>
                DeltaPHP Demo
            </h1>

            <p class="lead">
                Simple and fast PHP 5.4+ MVC framework with a modular organization.
            </p>
            <a class="btn btn-large btn-success" href="https://github.com/DeltaPHP">Github</a>
        </div>
        <hr>
        <div class="row marketing">
            <div class="col-md-6 liDesc">
                <h4>
                    Router
                </h4>

                <p>
                    Fast router with powerful routes based on extended logic of nginx locations.
                </p>
                <h4>
                    AbstractController
                </h4>

                <p>
                    Provides access to the base objects Request, Response, View. It select the default template, and
                    rendering its.
                </p>
                <h4>
                    Utils
                </h4>

                <p>
                    Collection of useful tools.
                </p>
            </div>
            <div class="col-md-6 liDesc">
                <h4>
                    Application
                </h4>

                <p>
                    Preparation and launching of request processing.
                </p>
                <h4>
                    HttpWarp
                </h4>

                <p>
                    Request, Response, Sessions.
                </p>
                <h4>
                    Composer, Twig
                </h4>

                <p>
                    Composer for a modular structure, and easy expansion. Twig for templates.
                </p>
            </div>
        </div>
        <div class="row">
            <div class="docs">
                <h2>
                    Documentation
                </h2>

                <div>
                    <h4>Clone Delta Skeleton Application</h4>
                    <pre class="brush: bash">git clone https://github.com/DeltaPHP/DeltaSkeletonApplication.git
composer install</pre>


                    <h4>Create new Controller</h4>
<pre class="brush: php">use DeltaCore\AbstractController;

class NewController extends AbstractController
{
    public function IndexAction($params = [])
    {

    }

}
</pre>
                    <h4>Add route to config/routers.php</h4>
                <pre class="brush:php">[
        "methods" => [\DeltaRouter\Route::METHOD_ALL],
        "patterns" => [
            "part" => \DeltaRouter\RoutePattern::PART_PATH,
            "type" => \DeltaRouter\RoutePattern::TYPE_FULL,
            "value" => "/",
        ],
        "action" => ["delta", "index"],
],</pre>


                    <h4>Create View</h4>
               <pre class="brush: html">&lt;!doctype html&gt;
&lt;head&gt;
    &lt;title&gt;{{ pageTitle | default("Default Title") }}&lt;/title&gt;
&lt;/head&gt;
&lt;html&gt;
    &lt;div class=”header”&gt;Header content&lt;/div&gt;
    &lt;div class=”body”&gt;
                   	&#123;% block content %&#125;
                        Big text about DeltaPHP - new fast PHP framework...
                        Current version: 	&#123;&#123; version &#125;&#125;
                    &#123;% endblock %&#125;
                   &lt;/div&gt;
    &lt;div class=”footer”&gt;&lt;/div&gt;
&lt;/html&gt;</pre>

                    <h4>Assign vars to view</h4>
                    <pre class="brush: php">$this->getView()->assign('pageTitle', 'Main page');</pre>
                    </p>

                    <h4>All done!</h4>
                </div>
            </div>
        </div>

        <script>
            SyntaxHighlighter.defaults['toolbar'] = false;
            SyntaxHighlighter.defaults['smart-tabs'] = false;
            SyntaxHighlighter.all()
        </script>
    </div>
{% endblock content %}