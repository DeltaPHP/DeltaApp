{
  "name": "deltaphp/delta-skeleton-application",
  "description": "Skeleton application on delta framework",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Vasiliy Shvakin",
      "email": "zen4dev@gmail.com"
    }
  ],
  "autoload": {
    "psr-0": {
      "Model": "./",
      "Controller": "./",
      "Maintenance": "./"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:DeltaPHP/phinx.git"
    }
  ],
  "require": {
    "deltaphp/deltacore": "^2.0",
    "deltaphp/deltaskeletonmodule": "^1.0",
    "twig/twig": "~1.0",
    "deltaphp/pages": "^1.0",
    "robmorgan/phinx": "dev-deltaphp",
    "kriswallsmith/assetic": "^1.3.1",
    "deltaphp/deltatwigext": "^0.1",
    "deltaphp/sitemenu": "^2.0",
    "deltaphp/acl" : "^2.0",
    "deltaphp/dictdir" : "^2.0",

    "bower-asset/bootstrap": "^3.3.5",
    "bower-asset/jquery": "^2.1.4",
    "bower-asset/html5shiv": "^3.7.3",
    "bower-asset/respond": "^1.4.2",
    "deltaphp/articles": "~2.0",
    "deltaphp/image-processor": "~2.0"
  },
  "scripts": {
    "post-install-cmd": [
      "Maintenance\\Composer::postInstallCmd"
    ],
    "post-update-cmd": [
      "Maintenance\\Composer::postInstallCmd"
    ]
  },
  "extra": {
    "asset-installer-paths": {
      "npm-asset-library": "public/assets/vendor",
      "bower-asset-library": "public/assets/vendor"
    },
    "asset-ignore-files": {
      "bower-asset/bootstrap": [
        "/.*",
        "_config.yml",
        "CNAME",
        "composer.json",
        "CONTRIBUTING.md",
        "docs",
        "js/tests",
        "test-infra",
        "fonts",
        "grunt",
        "js",
        "less",
        "Gruntfile.js",
        "package.json",
        "package.js"
      ],
      "bower-asset/jquery": [
        "**/.*",
        "build",
        "dist/cdn",
        "speed",
        "test",
        "*.md",
        "AUTHORS.txt",
        "Gruntfile.js",
        "package.json",
        "src"
      ]
    }
  }
}
